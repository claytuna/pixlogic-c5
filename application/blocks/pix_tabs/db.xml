<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

  <table name="btPixTabs">
    <field name="bID" type="integer">
      <unsigned/>
      <key/>
    </field>
    <field name="layoutType" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="tabTitle" type="text"/>
    <field name="tabMinHeight" type="string" size="255"/>
    <field name="allowIntroText" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
  </table>

  <table name="btPixTabsEntries">
    <field name="id" type="integer">
      <unsigned/>
      <autoincrement/>
      <key/>
    </field>
    <field name="bID" type="integer">
      <unsigned/>
    </field>
    <field name="cID" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="fID" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="linkURL" type="string" size="255"/>
    <field name="internalLinkCID" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="titleIntro" type="string" size="255"/>
    <field name="title" type="text"/>
    <field name="description" type="text"/>
    <field name="linkText" type="text"/>
    <field name="sortOrder" type="integer"/>
  </table>

</schema>
